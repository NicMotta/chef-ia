---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import ChefImage from "../../public/assets/chef.png";
import InputText from "../components/InputText";
import ChefDialog from "../components/ChefDialog";
---

<Layout title="Chef IA">
  <main>
    <div class="flex flex-col justify-items-center gap-10">
      <div
        class="flex flex-col md:flex-row m-auto items-center justify-center gap-4"
      >
        <Image class="w-2/3 md:w-1/3" src={ChefImage} alt="" />
        <ChefDialog client:only="react" />
      </div>
      <InputText client:only="react" />
    </div>
  </main>
</Layout>
